<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InnobePDA.MainPage"
             Title="Innobe PDA">

    <ContentPage.Content>
        <Grid Margin="5,5,5,5"
              RowSpacing="0"
              ColumnSpacing="0"
              RowDefinitions = "100, 100, 100, 100, 100, *"
              ColumnDefinitions ="1*, 1*">

            <Button Grid.Row="0" Grid.Column="0" x:Name="InboundButton" Text="입고" FontSize="Medium" Clicked="InboundButton_Clicked"/>
            <Button Grid.Row="0" Grid.Column="1" x:Name="OutboundButton" Text="출고" FontSize="Medium" />
            <Button Grid.Row="1" Grid.Column="0" x:Name="InventoryButton" Text="재고" FontSize="Medium" />

        </Grid>
    </ContentPage.Content>

</ContentPage>
